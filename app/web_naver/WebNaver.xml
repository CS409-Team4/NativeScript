<Page loaded="pageLoaded"  actionBarHidden="true">
	<StackLayout orientation="vertical">
		<GridLayout columns="50, *" height="50" id="GridLayoutTop">
			<image src="res://ic_menu" row="0" col="0" id="menu"/>
			<Label text="NAVER" row="0" col="1" horizontalAlignment="center" />
		</GridLayout>
		<StackLayout id="searchcontainer">
			<SearchBar row="0"
				id="search" text="{{ search }}" tap="inputTap"
				loaded="doNotShowAndroidKeyboard"/>
		</StackLayout>
		<WebView src="http://m.naver.com" />
    </StackLayout>
</Page>
